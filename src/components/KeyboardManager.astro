---
import Download from "../icons/Download.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap"
    />
    <title>Descargar CV - Panel Personalizado</title>
    <style>
      body,
      #download-panel {
        font-family: "Roboto", sans-serif;
      }

      #download-panel {
        position: fixed;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(253, 253, 253, 0.9);
        border-radius: 12px;
        padding: 2.5rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        display: none;
        z-index: 1000;
        text-align: center;
        width: 525px;
        height: 260px;
        opacity: 0;
        overflow: hidden;
        transition: opacity 0.3s ease;
      }

      #download-panel.show {
        display: block;
        opacity: 1;
      }

      /* Animaci칩n de aparici칩n del panel */
      @keyframes fadeIn {
        from {
          transform: scale(0.95);
          opacity: 0;
        }
        to {
          transform: scale(1);
          opacity: 1;
        }
      }

      #download-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to right, #007bff, #0056b3);
        color: white;
        padding: 14px 28px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition:
          background-color 0.3s,
          transform 0.2s;
        font-size: 1.1rem;
        text-decoration: none;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        margin-top: 1.2rem;
      }

      #download-button:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      #download-button-svg {
        margin-right: 8px;
        width: 1.5rem;
        height: 1.5rem;
      }

      #overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        display: none;
        z-index: 999;
      }

      #footer-panel {
        margin-top: 2rem;
        text-align: center;
        color: #817f7f;
        font-size: 1rem;
      }

      kbd {
        background: #eee;
        padding: 4px 4px;
        border-radius: 4px;
        font-size: 1rem;
      }

      @media (prefers-color-scheme: dark) {
        #download-panel {
          background: rgba(51, 51, 51, 0.9);
          color: #fff;
        }
        #download-button {
          background-color: #0d6efd;
          color: #fff;
        }
        #footer-panel {
          color: #bdbaba;
        }
      }
    </style>
  </head>

  <body>
    <!-- Panel para descargar el CV -->
    <div id="overlay"></div>
    <div id="download-panel">
      <p style="font-size: 1.5rem; margin-bottom: 1.5rem;">
        Puedes descargar mi CV en formato PDF:
      </p>
      <button id="download-button">
        <Download id="download-button-svg" />
        Descargar CV
      </button>
      <div id="footer-panel">
        <p style="font-size: 1.2rem"><kbd>ESC</kbd> para cerrar</p>
      </div>
    </div>

    <script>
      const downloadPanel = document.getElementById("download-panel");
      const overlay = document.getElementById("overlay");
      const downloadButton = document.getElementById("download-button");

      document.addEventListener("keydown", (event) => {
        if (event.ctrlKey && event.key.toLowerCase() === "k") {
          event.preventDefault();
          showDownloadPanel();
        }
      });

      function showDownloadPanel() {
        if (downloadPanel && overlay) {
          downloadPanel.style.display = "block";
          overlay.style.display = "block";

          setTimeout(() => {
            downloadPanel.classList.add("show");
          }, 10);
        }
      }

      function hideDownloadPanel() {
        if (downloadPanel) {
          downloadPanel.classList.remove("show");
          setTimeout(() => {
            downloadPanel.style.display = "none";
          }, 300);
        }
        if (overlay) {
          overlay.style.display = "none";
        }
      }

      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape") {
          hideDownloadPanel();
        }
      });

      if (overlay) {
        overlay.addEventListener("click", hideDownloadPanel);
      }

      if (downloadButton) {
        downloadButton.addEventListener("click", () => {
          const link = document.createElement("a");
          link.href = "./public/archivo/CV_Gonzalo_Fern치ndez.pdf";
          link.download = "CV_Gonzalo_Fern치ndez.pdf";
          link.click();
        });
      }
    </script>
  </body>
</html>
