---
import Section from "../Section.astro";
import { work } from "@cv";

function formatMonthYear(dateString: string) {
  const year = dateString.slice(0, 4);
  const monthNumber = parseInt(dateString.slice(5, 7));

  const months = [
    "enero",
    "febrero",
    "marzo",
    "abril",
    "mayo",
    "junio",
    "julio",
    "agosto",
    "septiembre",
    "octubre",
    "noviembre",
    "diciembre",
  ];

  const monthName = months[monthNumber - 1];

  return `${monthName} ${year}`;
}
---

<Section title="Experiencia laboral">
  <div class="timeline">
    <ul>
      {
        work.map(({ company, location, roles }) => {
          return (
            <li>
              <div class="timeline-marker" />
              <div class="timeline-content">
                <article>
                  <header>
                    <h3>
                      {company} | <span class="location">{location}</span>
                    </h3>
                  </header>
                  <ul class="roles">
                    {roles.map(
                      ({
                        position,
                        startDate,
                        endDate,
                        summary,
                        technologies,
                      }) => {
                        const startMonthYear = formatMonthYear(startDate);
                        const endMonthYear = endDate
                          ? formatMonthYear(endDate)
                          : "Actualidad";
                        const period = `${startMonthYear} - ${endMonthYear}`;

                        return (
                          <li class="role">
                            <div class="role-header">
                              <h4>
                                <span class="title">{position}</span> |{" "}
                                <span class="duration">{period}</span>
                              </h4>
                            </div>
                            <div class="role-description">
                              <ul>
                                {summary.map((point) => (
                                  <li>{point}</li>
                                ))}
                              </ul>
                              {technologies && (
                                <p class="technologies">
                                  <strong>Tecnolog√≠as utilizadas:</strong>{" "}
                                  {technologies}
                                </p>
                              )}
                            </div>
                          </li>
                        );
                      },
                    )}
                  </ul>
                </article>
              </div>
            </li>
          );
        })
      }
    </ul>
  </div>
</Section>

<style>
  .timeline {
    position: relative;
    padding: 2rem 0;
    border-left: 4px solid #007bff;
  }

  .timeline ul li {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 2rem;
  }

  .timeline-marker {
    position: absolute;
    left: 0%;
    top: 0.8rem;
    width: 1rem;
    height: 1rem;
    background-color: #007bff;
    border-radius: 50%;
    border: 3px solid #fff;
    box-shadow: 0 0 0 2px #007bff;
    transform: translateX(-50%);
    z-index: 1;
  }

  .timeline-content {
    background-color: #f9f9f9;
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    z-index: 0;
    transform-origin: center;
  }

  .timeline-content:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    z-index: 1;
  }

  .timeline-content h3 {
    font-weight: bold;
    font-size: 1.5rem;
    color: #111;
  }

  .location {
    font-weight: normal;
    color: #666;
    font-size: 1.3rem;
    margin-left: 6px;
  }

  .roles {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 16px;
    border-left: 4px solid #007bff;
    padding-left: 1rem;
    transition: border-color 0.3s ease;
  }

  .role-header {
    font-weight: bold;
    font-size: 1.1rem;
    color: #222;
  }

  .role-description ul {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-top: 8px;
  }

  .role-description ul li {
    margin-bottom: 0.5rem;
  }

  .technologies {
    margin-top: 1rem;
    font-style: italic;
    font-size: 1rem;
  }
</style>
