---
import Section from "../Section.astro";
import { skills } from "@cv";
---

<Section title="COMPETENCIAS TÃ‰CNICAS">
  <div class="skills-card">
    {
      skills.map(({ category, items }) => (
        <div class="skill-category">
          <h4>{category}</h4>
          <ul class="skill-items">
            {items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</Section>

<style>
  .skills-card {
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    padding: 2.5rem;
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .skills-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .skill-category {
    margin-bottom: 1rem;
  }

  .skill-category h4 {
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 0.95rem;
    color: #333;
  }

  .skill-items {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .skill-items li {
    background: #f9fafb;
    border-radius: 20px;
    padding: 0.6rem 1.2rem;
    font-size: 1rem;
    color: #333;
    font-weight: 500;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
    transition:
      background-color 0.3s ease,
      color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .skill-items li:hover {
    background-color: #007bff;
    color: #fff;
    box-shadow: 0 4px 10px rgba(0, 86, 179, 0.2);
  }

  @media (min-width: 768px) {
    .skills-card {
      padding: 3rem;
    }

    .skill-category h4 {
      font-size: 1.5rem;
    }
  }
</style>
